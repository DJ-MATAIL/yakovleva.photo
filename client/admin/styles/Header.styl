.header
    position fixed
    top  0
    left 0
    width  100%
    height 2rem
    background-color #333

    &--links
        margin-left 1rem

    &--nav
        margin-right 1rem
        & > button:last-child
            width auto

    button
    a
        margin-left .5rem
        font-size .8rem
        color #fff
        &:hover
            text-decoration underline

    a:first-child
        margin-left 0
    button
        position relative
        width  2rem
        height 2rem
    svg
        width  80%
        height 80%
        fill #fff
