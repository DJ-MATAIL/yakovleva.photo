.images-list
    position relative
    flex-basis 100%
    padding 1rem 1rem 1rem 0
    margin 0 -2px

    &--buttons
        margin 1rem 0

        & > button
            padding .5rem 1rem
            opacity .75
            border 1px solid #fff
            color #fff
            transition opacity .3s
            &:hover
                opacity 1
            &.disable
                pointer-events none
