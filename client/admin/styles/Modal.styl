@require "../../common/styles/functions.styl"

.modal
    position fixed
    top  0
    left 0
    width  100%
    height 100%
    overflow auto
    background-color rgba(0,0,0, .75)

    &--space
        padding 2rem 0

    &--container
        position relative
        max-width rem(450px)
        margin 0 auto
        box-shadow 0 0 1rem 1px #000
        border-radius .5rem
        background-color #0d0d0d

    &--header
        position relative
        padding 1rem

        & > h3
            font-size 1rem
            font-weight bold
            color #fff

        & > button
            position relative
            width  1.5rem
            height 1.5rem

            & > svg
                width  100%
                height 100%
                fill #fff

    &--body
        position relative
        padding 1rem
        border-top 1px solid #555
        border-bottom 1px solid #555

    &--footer
        position relative
        padding 1rem

        & > button
            padding .5rem
            border-width 1px
            border-style solid
            border-radius .25rem
            transition background-color .3s, color.3s

            &:nth-child(1)
                border-color #f00
                color #f00
                &:hover
                    background-color #f00
                    color #fff

            &:nth-child(2)
                border-color #08c
                color #08c
                &:hover
                    background-color #08c
                    color #fff
