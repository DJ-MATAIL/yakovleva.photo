.modal-slides-list
    position relative
    margin-left  calc(-1rem - 2px)
    margin-right @margin-left

    &--buttons
        margin 1rem 0

        & > button
            padding .5rem 1rem
            opacity .75
            border 1px solid #fff
            color #fff
            transition opacity .3s
            &:hover
                opacity 1
            &.disable
                pointer-events none

.modal-slides-list-item
    position relative

    & > img
        width  100%
        height 100%

    & > button
        cursor pointer
        background-color rgba(0,0,0, .3)
        transition opacity .3s

        &:hover
            opacity 1

        svg
            width  3rem
            height 3rem
            fill #fff

    & .selected
        opacity 1
    & .unselected
        opacity 0
