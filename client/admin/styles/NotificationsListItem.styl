.notifications-list-item
    position relative
    width 20rem
    margin 1rem 1rem 0 0
    border-radius 3px
    box-shadow 0 0 1px rgba(0,0,0, .5)
    background-color #fff
    overflow hidden

    & > button
        flex none
        width 1rem
        background-color #08c

        & > svg
            width  80%
            height 80%
            fill #fff

    & > div
        flex 1 1
        padding 1rem
        font-size 1rem
