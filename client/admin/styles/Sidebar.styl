@require "../../common/styles/constants.styl"
@require "../../common/styles/functions.styl"

.sidebar
    position relative
    box-sizing border-box
    flex none
    width rem(250px)
    padding 0 1rem

    &--container
        position fixed
        top  $adminHeaderHeight
        left 1rem
        width  s('calc(%s - 2rem)', rem(250px))
        height s('calc(100% - %s - 2rem)', @top)

        & > h3
            padding 1rem 0
            font-weight bold
            font-size 1.1rem
            color #fff

        & > ul > li
            list-style none

        a
            display block
            margin-top .5rem
            padding 1rem
            border-radius 3px
            background-color #0d0d0d
            color #fff
            transition background-color .3s

            &:hover
                background-color #151515

            &.active
                background-color rgba(0,136,204, .2)
                pointer-events none
                color #b0b0b0

        & > ul > li:first-child a
            margin-top 0
