.upload-images-list
    position fixed
    right  0
    bottom 0
    width  25rem
    height 15rem
    overflow hidden
    background-color #0d0d0d

    &--header
        position relative
        padding 1rem

        & > h3
            font-weight bold
            color #fff
        & > button
            width  1rem
            height 1rem

            & > svg
                width  100%
                height 100%
                fill #fff

    &--body
        position relative
        height calc(100% - 3rem)
        overflow-x hidden
        overflow-y auto
        color #fff
