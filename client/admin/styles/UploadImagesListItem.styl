.upload-images-list-item
    &--stage
        padding .3rem .5rem
        border-radius .5rem
        font-size .75rem
        color #000

        &.initial
            background-color #fff
        &.loading
            background-color #08c
            color #fff
        &.loaded
            background-color #00ff00
        &.error
            background-color #ff0000
            color #fff
