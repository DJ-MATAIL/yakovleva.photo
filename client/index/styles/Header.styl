@require "../../common/styles/constants.styl"

.header
    position fixed
    top  0
    left 0
    width  100%
    height $headerHeight

    &--shadow
        position absolute
        top  0
        left 0
        width  100%
        height 100%
        opacity .75
        background-image linear-gradient(#000, transparent)

    &--mobile
    &--desktop
        position relative
        height 100%
        padding 0 1rem

    &--desktop
        &--nav
            position relative
            width 100%

            nav
                margin-left 1.5rem

                & > a
                    margin-right 1.5rem
                    color #fff

                svg
                    width 1rem
                    height auto
                    margin-left .1rem
                    fill #fff

                & > div
                    position relative
                    height .9rem
                    margin-right 1.5rem

                    & > a
                        margin-right 0
                        color #fff

                a:hover
                    text-decoration underline

        &--subnav
            position absolute
            top   .9rem
            left  0
            width 200%
            padding-top 1.1rem
            visibility hidden

            &.visible
                visibility visible

            div
                margin-top 1rem

                &:first-child
                    margin-top 0

            a
                text-shadow 0 0 1px #000
                color #fff

    &--mobile
        position relative
        display none
        padding 0 1rem

        & > button
            width  2rem
            height 2rem

            & > img
                width  100%
                height 100%

    &--social-link
        position relative
        width  2rem
        height 2rem
        opacity .8
        transition opacity .3s

        &:hover
            opacity 1

        svg
            fill #fff

        &[href*="instagram.com"] svg
            width  auto
            height 63%
        &[href*="vk.com"] svg
            width  100%
            height 100%
            margin-top -1px
        &[href*="ok.ru"] svg
            width  auto
            height 60%

@media (max-width $smartphonesMediaMaxWidth)
    .header--mobile
        display flex
    .header--desktop
        display none
