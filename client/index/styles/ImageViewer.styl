.image-viewer
    background-color #000

    &--picture
        position relative
        width  100%
        height 100%
        overflow hidden

        & > img
            max-width  100%
            max-height 100%

    &--nav
        & > button:hover > img
            opacity 1
        & > button > img
            width  50%
            height auto
            opacity .75
            transition opacity .5s

    &--left-arrow
    &--right-arrow
        position absolute
        top 0
        width  4rem
        height 100%

    &--left-arrow
        left 0
    &--right-arrow
        right 0

    &--close
        position absolute
        top   0
        right 0
        width  4rem
        height 4rem
