@require "../../common/styles/constants.styl"

.menu
    position fixed
    width  100%
    height 100%
    overflow auto
    background-color #000

    &--container
        position relative
        min-height 100%

    &--header
        height $headerHeight
        padding 0 1rem

        & > a
            display block
            letter-spacing 2px
            text-transform uppercase
            font-weight 300
            font-size 1.25rem
            color #fff

        & > button
            width  2rem
            height 2rem
            & > img
                width  100%
                height 100%

    &--body
        position relative
        margin auto 0

        ul ul
            margin-top .5rem

        li
            margin-left 1rem
            padding .5rem 0
            list-style none

            & li
                margin-left 2rem

        a
            color #fff

    &--footer
        position relative
        margin-top auto
